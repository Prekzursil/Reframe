{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Reframe",
  "version": "0.1.0",
  "identifier": "com.reframe.reframe",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "Reframe Desktop",
        "width": 1024,
        "height": 720
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "createUpdaterArtifacts": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  },
  "plugins": {
    "updater": {
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDI1M0U4OTc3NDlDODE4NjIKUldSaUdNaEpkNGsrSmRGRkc3N3ZzMUpscEY1bDFkM2NSK3FYaVljaHdhRkswOFlGQjZkUHBYcksK",
      "endpoints": [
        "https://github.com/Prekzursil/Reframe/releases/latest/download/latest.json"
      ]
    }
  }
}
